body
  background-color #E9FFFC
.contacts-page
  width 100%
  &__content
    max-width 1000px
    margin 20px auto
    display flex
    justify-content space-around
  &__info
    max-width 600px
    height 400px
    & table
      font-size 20px
    & td
      padding-right 50px
    &_map-wrapp
      margin-top 20px
  &__feedback
    max-width 340px
    height 400px
    &_text
      font-size 24px
    & form
      position relative
      top 22px

@media screen and (max-width: 1024px) and (min-width: 600px)
  .contacts-page__content
    flex-direction column
    align-items center
@media screen and (max-width: 600px) and (min-width: 300px)
  .contacts-page__content
    flex-direction column
    align-items center
  .map
    display none
  .contacts-page__feedback
    margin-top -200px