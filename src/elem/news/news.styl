.news
  position relative
  width 383px
  height 212px
  background-color #e75735
  border-radius 6px
  &__image
    display block
    position absolute
    width 95px
    background-color #ffffff
    height 212px
    overflow hidden
    border-radius 6px 0 0 6px
    & img
      display block
      position absolute
      left -60px
  &__text
    display block
    position absolute
    left 95px
    width 288px
    height 212px
    color rgb(255,255,255)
    &_caption
      display block
      margin-left 30px
      margin-top 15px
      font-size 34px
      width 190px
      line-height 32px
      font-family "sans-serif"
    &_date
      display block
      width 170px
      margin-left 30px
      margin-top -6px
      font-size 11px
      letter-spacing 1px
      font-weight 700
      font-family "sans-serif"
    &_content
      display block
      margin-left 30px
      width 250px

