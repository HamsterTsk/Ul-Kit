.toggle
  position relative
  width 59px
  height 24px
  border-radius 12px
  transition all ease 1000ms
  cursor pointer
  margin-top 50px

.toggle_active
  background-color #4db7a7

.toggle_disactive
  background-color #e5e5e5

.toggle__circle
  position absolute
  top 3px
  display block
  width 18px
  height 18px
  border-radius 50%
  background-color rgb(255,255,255)
  transition all ease 700ms

.toggle__circle_active
  left 37px

.toggle__circle_disactive
  left 4px

.toggle__text
  font-size 12px
  font-family sans-serif
  position absolute
  top 5px
  color rgb(255,255,255)
  transition all ease 1000ms

.toggle__text_active
  left 13px

.toggle__text_disactive
  left 27px
