.red-slider
  display block
  width 268px
  cursor pointer
  position relative
  margin-top 50px
  margin-left 10px

.red-slider__bar
  z-index 2
  position absolute
  display block
  width 260px
  height 5px
  border-radius 2px
  background-color #e5e5e5

.red-slider__circle
  z-index 34
  display block
  position relative
  top -8px
  width 20px
  height 20px
  border-radius 10px
  background-color #e75735
  margin-left -3px

.red-slider__decore
  display block
  position absolute
  top -13px
  left 5px
  width 10px
  height 10px
  transform rotate(45deg)
  background-color #e75735
  border-radius 2px

.red-slider__dialog
  display block
  position absolute
  border-radius 5px
  top -34px
  left -7px
  width 35px
  height 20px
  background-color #e75735
  font-size 13px
  letter-spacing 1px
  color rgb(255,255,255)
  font-family "sans-serif"
  text-align center
  padding-top 8px
