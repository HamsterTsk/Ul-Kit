.header
  width 100%
  height 200px
  &__img
    position absolute
    left 50px
    & img
      width 160px
  &__menu
    width 100%
    position absolute
    top 140px
    right 0
    transition all ease 300ms
  &__caption
    color #4db7a7
    text-align center
    width 1000px
    height 127px
    overflow hidden
    margin 0 auto
    transition height ease 500ms
    &_name
      display block
      font-size 70px
      font-style italic
      position relative
      left -170px
    &_addition
      display block
      font-size 40px
      position relative
      top -26px
      left 100px
@media screen and (max-width: 970px) and (min-width: 800px)
  .header
    height 500px
@media screen and (max-width: 800px) and (min-width: 300px)
  .header
    height 500px
    display flex
    flex-direction column
    align-items center
    &__caption
      display none
    &__img
      position relative
      left 20px