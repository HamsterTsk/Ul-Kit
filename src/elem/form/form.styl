.form
  position relative
  &__button
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none
    position relative
    width 120px
    height 32px
    border-radius 3px
    box-shadow 0 2px 1px 0 #27a18f
    background-color #4db7a8
    cursor pointer
    &_wrapp
      position absolute
      left 200px
      top 200px
    &_text
      font-size 12px
      letter-spacing 1px
      line-height 34px
      color rgb(255,255,255)
      font-family "Lato"
      font-weight 800
      display block
      width 100%
      text-align center
  &__check
    -webkit-user-select none
    -moz-user-select none
    -ms-user-select none
    user-select none
    display inline-block
    width 80px
    height 30px
    position relative
    top 11px
    left 15px
    border-radius 5px
    opacity 0
    transition opacity ease 500ms
    &_decore
      display block
      position absolute
      top 10px
      left -3px
      width 10px
      height 10px
      border-radius 2px
      transform rotate(45deg)
    &_text
      font-size 10px
      display block
      position absolute
      top -11px
      width 100%
      text-align center
      letter-spacing 1px
      line-height 54px
      color rgb(255,255,255)
      font-family "Lato"
      font-weight 800
    &_false
      background-color #e75735
    &_true
      background-color #4db7a7
  &__input,
  &__message
    border-radius 3px
    border none
    background-color rgb(229, 229, 229)
    font-size 14px
    font-family "SourceSansPro"
    color rgb(136, 136, 136)
  &__input
    width 200px
    height 30px
    padding 1px 10px
  &__message
    resize none
    width 300px
    height 80px
    padding 10px 10px
    overflow hidden
    margin-top 10px
