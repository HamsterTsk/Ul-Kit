.menu
  height 60px
  user-select none
  max-width 910px
  margin 0 auto
  &__list
    list-style none
    float left
    margin 10px 10px
    text-align center
    cursor pointer
  &__link
    display block
    font-family "sans-serif"
    text-decoration none
    font-size 20px
    color rgb(255,255,255)
    line-height 37px
    width 150px
    height 40px
    background-color #4db7a7
    border-radius 5px
    &:first-letter
      text-transform uppercase
    &_active
      border 2px solid #4db7a7
      background-color rgb(255,255,255)
      box-shadow 0 0 2px 2px #4db7a7
      color #4db7a7
      width 146px
      height 36px
      line-height 33px
      text-shadow 0 0 24px #4db7a7
  &__ul
    display flex
    flex-direction row
@media screen and (max-width: 970px)
  .menu
    &__ul
      flex-direction column
      align-items center