.message
  position relative
  height 428px
  width 280px
  border-radius 5px
  margin-top 50px

.message__body
  width 280px
  height 360px
  border-radius 5px
  background-color #f1f1f1

.message__button
  position absolute
  top 410px
  left 18px
  width 244px
  height 36px
  border-radius 5px
  background-color #4eb7a8
  text-align center
  line-height 36px
  color #ffffff
  font-family sans-serif
  box-shadow 0 3px 1px #28a290
  cursor pointer
  -webkit-user-select none
  -moz-user-select none
