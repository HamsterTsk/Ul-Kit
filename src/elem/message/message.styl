  padding 20px 0 0 20px

.message__content_1
  top 160px
  left 8px
  background-color #ffffff

.message__content_2
  top 270px
  left 6px
  background-color #e5e5e5
  border 2px solid #ffffff

.message__icon
  display block
  position absolute
  cursor pointer

.message__icon_chat
  top 115px
  left 35px

.message__icon_camera
  top 115px
  left 220px

.message__name
  width 280px
  height 100px
  background-color #4db7a7
  border-radius 5px 5px 0 0

.message__name_who
  font-size 34px
  letter-spacing -1px
  color rgb(255,255,255)
  font-family "sans-serif"
  display block
  position absolute
  top 10px
  left 21%

.message__photo
  position absolute
  top 60px
  left 94px
  display block
  width 84px
