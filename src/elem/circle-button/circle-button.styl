.circle-button
  cursor pointer
  width 50px
  height 50px
  border-radius: 50%
  position relative
  &_disactive
    background-color #4db7a7
    border 3px solid #4db7a7
  &_active
    border 3px solid #4db7a7
    background-color rgb(255,255,255)
  &_extreme
    background-color #e5e5e5
    border 3px solid #e5e5e5
  &__arrow
    position absolute
    top 50%
    left 35%
    &_left
      left 32%
    &:before,
    &:after
      content ""
      display block
      width 16px
      height 3px
      margin-top 3px
    &:after
      margin-top -12px
    &_disactive:before,
    &_disactive:after
      background-color rgb(255,255,255)
    &_active:before,
    &_active:after
      background-color #4db7a7
    &_right:before
      transform rotate(-45deg)
    &_right:after
      transform rotate(45deg)
    &_left:before
      transform rotate(45deg)
    &_left:after
      transform rotate(-45deg)
